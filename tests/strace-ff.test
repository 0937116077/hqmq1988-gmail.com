#!/bin/sh

# Check -ff option.

. "${srcdir=.}/init.sh"

rm -f "$LOG".*

./set_ptracer_any ./sleep 1 > /dev/null &
PID=$!
run_strace -a14 -eexit_group -ff -p $PID

# check that output matches
match_diff "$LOG.$PID"

# check that no other output files have been created
set -- "$LOG".*
[ "$LOG.$PID" = "$*" ] ||
	fail_ "too many output files: $*"

rm -f "$LOG.$PID"
